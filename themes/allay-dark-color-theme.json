    "tokenColors": [
        // ... Vos tokenColors restent ici ...
        // Ils sont bien conçus pour un thème sombre, donc pas de changement majeur nécessaire.
        {
            "name": "Comment",
            "scope": [
                "comment",
                "punctuation.definition.comment"
            ],
            "settings": {
                "fontStyle": "italic",
                "foreground": "#666666"
            }
        },
        {
            "name": "Variables",
            "scope": [
                "variable",
                "string constant.other.placeholder"
            ],
            "settings": {
                "foreground": "#F1F1F1"
            }
        },
        {
            "name": "Keyword, Storage",
            "scope": [
                "keyword",
                "storage.type",
                "storage.modifier"
            ],
            "settings": {
                "foreground": "#2883FF"
            }
        },
        {
            "name": "Operator, Misc",
            "scope": [
                "keyword.control",
                "punctuation",
                "meta.tag",
                "punctuation.definition.tag",
                "punctuation.separator.inheritance.php"
            ],
            "settings": {
                "foreground": "#28B9FF"
            }
        },
        {
            "name": "Tag",
            "scope": [
                "entity.name.tag",
                "markup.deleted.git_gutter"
            ],
            "settings": {
                "foreground": "#BA5AFF"
            }
        },
        {
            "name": "Function, Special Method",
            "scope": [
                "entity.name.function",
                "meta.function-call",
                "support.function",
                "keyword.other.special-method"
            ],
            "settings": {
                "foreground": "#4362ff"
            }
        },
        {
            "name": "Number, Constant, Function Argument",
            "scope": [
                "constant.numeric",
                "constant.language",
                "support.constant",
                "constant.character",
                "variable.parameter",
                "keyword.other.unit"
            ],
            "settings": {
                "foreground": "#3D2AFF"
            }
        },
        {
            "name": "String, Symbols, Inherited Class",
            "scope": [
                "string",
                "constant.other.symbol",
                "entity.other.inherited-class",
                "markup.inserted.git_gutter"
            ],
            "settings": {
                "foreground": "#7129FF"
            }
        },
        {
            "name": "Class, Support",
            "scope": [
                "entity.name",
                "support.type",
                "support.class"
            ],
            "settings": {
                "foreground": "#685AFF"
            }
        },
        {
            "name": "Attributes",
            "scope": [
                "entity.other.attribute-name"
            ],
            "settings": {
                "fontStyle": "italic",
                "foreground": "#685AFF"
            }
        },
        {
            "name": "Invalid",
            "scope": [
                "invalid",
                "invalid.illegal"
            ],
            "settings": {
                "foreground": "#A52AFF"
            }
        },
        {
            "name": "Language methods",
            "scope": [
                "variable.language"
            ],
            "settings": {
                "fontStyle": "italic",
                "foreground": "#A52AFF"
            }
        }
    ]
}